@page "/"

<link rel="stylesheet" href="css/Login.css">

@layout NotLoggedLayout

@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Notifications

<div class="container">
    <!-- Nagłówek strony -->
    <h2 class="header-text">Strona logowania</h2>
    <h3 class="header-text">Smart Manager</h3>

    <!-- Formularz logowania -->
    <div class="login-form">
        <!-- Pole email -->
        <div class="form-field">
            <SfTextBox Placeholder="Email" @bind-Value="@login" FloatLabelType="FloatLabelType.Always" Type="InputType.Email"></SfTextBox>
        </div>

        <!-- Pole hasło -->
        <div class="form-field">
            <SfTextBox Placeholder="Hasło" @bind-Value="@password" FloatLabelType="FloatLabelType.Always" Type="@(showPassword ? InputType.Text : InputType.Password)">
            </SfTextBox>
        </div>

        <!-- Switch do pokazania/ukrycia haseł -->
        <div class="form-field-checkbox">
            <label for="showPasswords" style="padding: 0px 10px 0px 0">Pokaż hasło</label>
            <SfSwitch @bind-Checked="showPassword"></SfSwitch>
        </div>

        <!-- Przyciski logowania -->
        <div class="form-buttons">
            <SfButton type="submit" IsPrimary="true" OnClick="OnLogInButtonClicked">Zaloguj się</SfButton>
            <SfButton CssClass="e-flat" OnClick="OnForgotPasswordClicked">Zapomniałem hasła</SfButton>
        </div>
    </div>

    <!-- Toast powiadomień -->
    <SfToast ID="toast_default" @ref="ToastObj" Title="Nie udało się zalogować" Content="@ToastContent" Timeout="5000" Icon="e-circle-remove">
        <ToastPosition X="Right" Y="Bottom"></ToastPosition>
    </SfToast>
</div>
