@page "/UserDetails/{ParamID}"

@using engineering_project_front.Models
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Notifications
@using Syncfusion.Blazor.Popups

<button @onclick="EditUser">Edytuj użytkownika</button>
<button @onclick="ShowDeleteConfirmation">Usuń użytkownika</button>

<h3>Dane użytkownika</h3>
<br />
<label>@User.FirstName</label>
<br />
<label>@User.LastName</label>
<br />
<label>@User.Email</label>
<br />
<label>@User.TeamName</label>
<br />
<label>@User.RoleName</label>
<br />

<div>
    <SfToast @ref="Toast" Title="Powiadomienie" Content="@Message" Timeout="5000" ShowCloseButton="true">
        <ToastPosition X="Right" Y="Bottom"></ToastPosition>
    </SfToast>
</div>

<SfDialog IsModal="true" Width="300px" ShowCloseIcon="true" Visible="@IsDeleteDialogVisible"
          Header="Potwierdzenie usunięcia" Content="Czy na pewno chcesz usunąć tego użytkownika?">
    <DialogButtons>
        <DialogButton Content="Usuń" IsPrimary="true" OnClick="ConfirmDelete" />
        <DialogButton Content="Anuluj" OnClick="CloseDeleteDialog" />
    </DialogButtons>
</SfDialog>
