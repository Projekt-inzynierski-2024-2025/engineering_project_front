@page "/forgot-password"

@layout NotLoggedLayout

@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Notifications

<PageTitle>Forgot Password</PageTitle>

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                <SfTextBox Placeholder="Email" @bind-Value="mail" FloatLabelType="@FloatLabelType.Auto" Type="InputType.Email"></SfTextBox>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                <SfButton IsPrimary="true" OnClick="OnSendButtonClicked">Send code</SfButton>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                <SfButton CssClass="e-flat" IsPrimary="true" OnClick="OnBackToLoginClicked">Back to login</SfButton>
            </div>
             <div>
                <SfToast ID="toast_default" @ref="ToastObj" Title="Code Sent" Content="@ToastContent" CssClass="e-toast-info" Timeout="5000" Icon="e-info toast-icons">
                    <ToastPosition X="Center" Y="Top"></ToastPosition>
                </SfToast>
            </div>
        </div>
    </div>
</div>