@page "/forgot-password"

@layout NotLoggedLayout

@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Notifications

<div class="container">
    <!-- Nagłówek strony -->
    <h3 class="header-text">Zapomniałeś hasła?</h3>

    <!-- Formularz resetowania hasła -->
    <div class="forgot-password-form">
        <!-- Pole email -->
        <div class="form-field">
            <SfTextBox Placeholder="Email" @bind-Value="mail" FloatLabelType="FloatLabelType.Auto" Type="InputType.Email"></SfTextBox>
        </div>

        <!-- Przyciski akcji -->
        <div class="form-buttons">
            <SfButton IsPrimary="true" OnClick="OnSendButtonClicked">Wyślij kod</SfButton>
            <SfButton CssClass="e-flat" OnClick="OnBackToLoginClicked">Wróć do logowania</SfButton>
        </div>
    </div>

    <!-- Toast powiadomień -->
    <SfToast ID="toast_default" @ref="ToastObj" Title="Kod wysłany" Content="@ToastContent" CssClass="e-toast-info" Timeout="5000" Icon="e-info toast-icons">
        <ToastPosition X="Center" Y="Top"></ToastPosition>
    </SfToast>
</div>
