@page "/edit-work"

@using Syncfusion.Blazor.Calendars

<PageTitle>Edytuj pracę</PageTitle>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Dzień do edycji</label>
        <SfDatePicker TValue="DateTime?" @ref="@DatePickerObj" Placeholder="Wybierz dzień" ShowClearButton="true" FullScreen="true">
            <DatePickerEvents TValue="DateTime?" OnRenderDayCell="@DisableDate"></DatePickerEvents>
        </SfDatePicker>
    </div>
</div>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Początek pracy</label>
        <SfTimePicker TValue="DateTime?" FullScreen="true" ShowClearButton="true"></SfTimePicker>
    </div>
</div>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Koniec pracy</label>
        <SfTimePicker TValue="DateTime?" FullScreen="true" ShowClearButton="true"></SfTimePicker>
    </div>
</div>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Początek przerwy</label>
        <SfTimePicker TValue="DateTime?" FullScreen="true" ShowClearButton="true"></SfTimePicker>
    </div>
</div>

<div class="col-lg-12 control-section">
    <div class="control-wrapper">
        <label class="example-label">Koniec przerwy</label>
        <SfTimePicker TValue="DateTime?" FullScreen="true" ShowClearButton="true"></SfTimePicker>
    </div>
</div>